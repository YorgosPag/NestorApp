{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@geo-alert/core/*": ["./src/*"],
      "@geo-alert/core/polygon-system": ["./polygon-system"],
      "@geo-alert/core/polygon-system/*": ["./polygon-system/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "polygon-system/**/*.ts",
    "polygon-system/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "examples/**/*"
  ]
}